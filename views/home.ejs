<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id='mySidenav' class='sidenav'>
      <a href='javascript:void(0)' class='closebtn' onclick='closeNav()'>&times;</a>
      <a href='/logout'>Logout</a>
      <a href='/tasks/create_tasklist'>Create Tasklist</a>
      <p class='section'>My Tasklists</p>
      <% tasklists.forEach(function(list) { %>
        <a class='menulist' href='#'><%= list.listname %></a>
      <% }); %>
      <a href='#' style='margin-top:24px'>Edit Tasklists</a>
      <!-- TODO add edit tasklist feature -->
    </div>

    <span style='font-size:30px;cursor:pointer' onclick='openNav()'>&#9776;Projects</span>

    <h1>Welcome <%= username %>!</h1>

    <script>
      function openNav() {
        document.getElementById('mySidenav').style.width = '250px';
        document.body.style.backgroundColor = 'rgba(0,0,0,0.4)';
      }

      function closeNav() {
        document.getElementById('mySidenav').style.width = '0';
        document.body.style.backgroundColor = 'white';
      }
    </script>
  </body>
</html>