<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js"></script>
    <script src="/js/home.js"></script>
  </head>
  <body>
    <div id='currentList'><%= listname %></div>
    <div class='backhome'>
      <button onclick="location.href = '/home'" id='homebtn'>&lt; Home</button>
    </div>
    <% tasks.forEach(function(task) { %>
      <p class='task'><%= task.objective %></p>
    <% }); %>
    <div class='dropdown' id='skin'>
      <button onclick='drop()' class='dropbtn' id='skinbtn'>Change environment</button>
      <div id='myDropdown' class='dropdown-content'>
        <a href='/home/<%= listname %>/neutral'>Neutral</a>
        <a href='/home/<%= listname %>/calm'>Calm</a>
        <a href='/home/<%= listname %>/motivational'>Motivational</a>
        <a href='/home/<%= listname %>/depressing'>Depressing</a>
        <a href='/home/<%= listname %>/stressful'>Stressful</a>
      </div>
    </div>
  </body>
</html>